<!--pages/table/table.wxml-->


<view class="container" style="margin-top: 20px;">
  <form bindsubmit="formSubmit">
    <view class="form-group" style="margin-bottom: 20px;">
      <label class="form-label ">表单名称</label>
      <input class="form-input bg-white margin-top-sm" name="tableName" placeholder="请输入表格名称" />
    </view>

    <view class="form-group" style="margin-bottom: 20px;">
      <label class="form-label">表单介绍</label>
      <textarea class="form-textarea bg-white margin-top-sm" name="tableDescription" placeholder="请输入表格介绍"></textarea>
    </view>

    <button class="btn btn-primary" formType="submit" style="background-color: lightblue; border-radius: 20px;">下一步</button>
  </form>
</view>
